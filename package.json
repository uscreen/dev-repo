{
  "name": "@uscreen.de/dev-repo",
  "version": "0.6.2",
  "description": "cli to manage dev repos",
  "main": "index.js",
  "type": "module",
  "bin": {
    "repo": "./bin/cli.js",
    "repo-list": "./bin/cli-list.js",
    "repo-install": "./bin/cli-install.js",
    "repo-run": "./bin/cli-run.js",
    "repo-pull": "./bin/cli-pull.js"
  },
  "homepage": "https://github.com/uscreen/dev-repo",
  "repository": "https://github.com:uscreen/dev-repo.git",
  "author": "Marcus Spiegel <spiegel@uscreen.de>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '**/*.js' --fix",
    "test": "c8 --all tap --no-coverage test/**/*.test.js",
    "test:cov": "c8 --all --reporter html tap --no-coverage test/**/*.test.js",
    "test:ci": "c8 --all --reporter text-summary tap --no-coverage test/**/*.test.js",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "bin/",
    "src/"
  ],
  "dependencies": {
    "commander": "^8.3.0",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "read-pkg-up": "^9.0.0",
    "write-pkg": "^5.0.0"
  },
  "devDependencies": {
    "@uscreen.de/eslint-config-prettystandard-node": "^0.2.2",
    "c8": "^7.11.0",
    "husky": ">=6",
    "lint-staged": ">=12.3.2",
    "tap": "^15.1.6"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
